@model CreateRequest

@{ 
    ViewBag.Title = "Ask Help";
}

<h1>Create A Request Here</h1>

<div>
   
    <form asp-controller="Home" asp-action="CreateRequest" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FullName"></label>
            <input class="form-control" asp-for="FullName" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Branch"></label>
            <input class="form-control" asp-for="Branch" />
            <span asp-validation-for="Branch" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PastorName"></label>
            <input class="form-control" asp-for="PastorName" />
            <span asp-validation-for="PastorName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Need"></label>
            <select class="form-control" asp-for="Need" asp-items="Html.GetEnumSelectList<NeedItems>();">
                <option>Please Select</option>
            </select>
            <span asp-validation-for="Need" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Phone"></label>
            <input class="form-control" asp-for="Phone" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address"></label>
            <input class="form-control" asp-for="Address" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="m-4">
            <button type="submit" class=" btn btn-primary">Ask</button>
        </div>
    </form>
</div>