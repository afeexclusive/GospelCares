@model EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
    int i = 0;
}

-- <div class="align-content-center">
    <div class="row">
        <form method="post" class="mt-3 p-1">
            <div class="form-group row">
                <label asp-for="Id" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Id" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="RoleName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row">
                <div class="col-sm-8">
                    <button type="submit" class=" btn btn-primary">Update</button>
                    <a asp-action="listroles" asp-controller="home" class="btn btn-danger"> Cancel </a>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading main-color-bg"><h3 class="panel-title">All Users</h3></div>
    <div class="panel-body">
        <div class="row">

            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    i++;

                    <h4 class="card-title"> @user</h4>
                    <br />
                }
            }
            else
            {
                <h4 class="card-title"> None at the moment</h4>
            }

        </div>
        <div class="form-group row">
            <div class="col-sm-8">
                <a asp-action="editusersinrole" asp-controller="home" asp-route-id="@Model.Id" class="btn btn-primary" style="width:auto"> Add or Remove Users </a>
            </div>
        </div>
    </div>
</div>